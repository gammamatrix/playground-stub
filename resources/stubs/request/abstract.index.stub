    public function prepareForValidationPagination(): array
    {
        $page = $this->get('page');
        $page = is_numeric($page) ? (int) abs($page) : null;
        $perPage = $this->get('perPage');
        $perPage = is_numeric($perPage) ? (int) abs($perPage) : 100;

        $this->merge([
            'page' => $page,
            'perPage' => $perPage,
        ]);

        return [
            'page' => $page,
            'perPage' => $perPage,
        ];
    }
