    public function rules_filters(array &$rules): void
    {
        if (method_exists($this, 'rules_filters_flags')) {
            $this->rules_filters_flags($rules);
        }
        if (method_exists($this, 'rules_filters_dates')) {
            $this->rules_filters_dates($rules);
